<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="300dp">

        <TextView
            android:id="@+id/showNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#6B6B6D"
            android:ems="10"
            android:gravity="center|right"
            android:importantForAutofill="no"
            android:paddingTop="10pt"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/buAC"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="AC"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buPlusMinus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="+/-"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="%"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buDivide"
                    android:layout_width="45pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="buOpEvent"
                    android:text="/"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buMultiply"
                    android:layout_width="45pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="buOpEvent"
                    android:text="*"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu5"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buMinus"
                    android:layout_width="45pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="buOpEvent"
                    android:text="-"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginEnd="2pt"
                    android:layout_weight="1"
                    android:onClick="buNumberEvent"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buPlus"
                    android:layout_width="45pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:onClick="buOpEvent"
                    android:text="+"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bu0"
                android:layout_width="73pt"
                android:layout_height="30pt"
                android:layout_marginEnd="2pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="2pt"
                android:layout_weight="1"
                android:onClick="buNumberEvent"
                android:text="."
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buEqual"
                android:layout_width="45pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buEqualEvent"
                android:text="="
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>